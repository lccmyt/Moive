<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="38dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="24dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/dingwei"
                    android:src="@mipmap/icon_location"
                    android:layout_marginLeft="24dp"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/dingwei"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/city"
                    />
                <com.amap.api.maps2d.MapView
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                </com.amap.api.maps2d.MapView>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/icon_search"
                    android:id="@+id/search"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_17" />
            </LinearLayout>

            <com.stx.xhb.xbanner.XBanner
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="340dp"
                android:id="@+id/xbn"
                android:layout_height="150dp">

            </com.stx.xhb.xbanner.XBanner>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="#1C2243"
                android:orientation="horizontal"
                android:layout_height="38dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/xin"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="9dp"/>
                <TextView
                    android:layout_marginLeft="9dp"
                    android:layout_width="60dp"
                    android:text="正在热映"
                    android:layout_weight="1"
                    android:layout_marginTop="9dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="26dp"
                    android:id="@+id/more1"
                    android:layout_height="17dp"
                    android:text="更多"
                    android:layout_marginRight="@dimen/dp_17"
                    android:layout_marginTop="9dp"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    />
            </LinearLayout>


<!--            <android.support.v7.widget.RecyclerView
                android:layout_width="340dp"
                android:id="@+id/rc1"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_loading_rv"
                android:layout_width="@dimen/dp_340"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="#1C2243"
                android:orientation="horizontal"
                android:layout_height="38dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/quan"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="9dp"/>
                <TextView
                    android:background="#1C2243"
                    android:layout_marginLeft="9dp"
                    android:layout_width="60dp"
                    android:text="即将上映"
                    android:layout_weight="1"
                    android:layout_marginTop="9dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="36dp"
                    android:id="@+id/more2"
                    android:layout_height="17dp"
                    android:text="更多"
                    android:layout_marginTop="9dp"
                    android:textSize="12sp"
                    android:layout_marginRight="@dimen/dp_17"
                    android:textColor="#fff"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="@dimen/dp_340"
                android:layout_gravity="center"
                android:id="@+id/fragment_upcoming_rv"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="#1C2243"
                android:orientation="horizontal"
                android:layout_height="38dp">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/huo"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="9dp"/>
                <TextView
                    android:background="#1C2243"
                    android:layout_marginLeft="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="热门电影"
                    android:layout_marginTop="9dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="26dp"
                    android:id="@+id/more3"
                    android:layout_height="17dp"
                    android:text="更多"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="@dimen/dp_17"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="340dp"
                android:layout_marginLeft="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="24dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="340dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/iv"/>
                <!--<com.facebook.drawee.view.SimpleDraweeView-->
                    <!--android:layout_width="340dp"-->
                    <!--android:id="@+id/iv"-->
                    <!--android:layout_height="match_parent" />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30sp"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:id="@+id/tv1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/tv2"
                    android:textColor="#fff"
                    android:layout_toRightOf="@id/tv1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"/>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:id="@+id/bt_buy"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_movie_buybt"
                    android:layout_alignParentRight="true"
                    android:textColor="#FFF"
                    android:text="购票"/>
            </RelativeLayout>
<!--            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="340dp"
                android:id="@+id/rc3"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>-->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="@dimen/dp_340"
                android:layout_gravity="center"
                android:id="@+id/fragment_hot_rv"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
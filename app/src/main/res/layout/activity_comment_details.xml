<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".activity.CommentDetailsActivity">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_marginTop="37dp"
        android:orientation="horizontal"
        android:layout_height="22dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/shape"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:text="评论详情"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/comment"
        android:layout_below="@id/title"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="44dp"
            android:layout_height="44dp"
            fresco:roundedCornerRadius="10dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            android:id="@+id/iv_touxiang"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_touxiang"
            android:textColor="#fff"
            android:id="@+id/tv_name"/>

        <com.bawei.moive.view.RatingBar
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/iv_touxiang"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            app:starCount="5"
            app:starEmpty="@mipmap/xing1"
            app:starFill="@mipmap/xing3"
            app:starHalf="@mipmap/xingxing2"
            app:starImageSize="16dp"
            app:starPadding="6dp"
            android:layout_marginTop="6dp"
            app:starStep="3.5"
            android:id="@+id/ratingbar"
            app:stepSize="Half">
        </com.bawei.moive.view.RatingBar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/tv_score"
            android:textColor="#fff"
            android:text="123546"
            android:layout_toRightOf="@id/ratingbar"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="227dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginTop="14dp"
            android:id="@+id/tv_time"/>
        <TextView
            android:layout_below="@id/iv_touxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginRight="24dp"
            android:layout_marginTop="14dp"
            android:id="@+id/tv_comment"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_below="@id/comment"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#fff"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_below="@id/view"
        android:layout_marginLeft="24dp"
        android:textSize="10sp"
        android:textColor="#fff"
        android:layout_marginTop="9dp"
        android:id="@+id/tv_num"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/tv_num"
        android:layout_marginTop="14dp"
        android:id="@+id/rc1"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="我也来写写看法"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="16sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="24dp"
        android:id="@+id/et1"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="发送"
        android:textColor="#fff"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:id="@+id/send"/>
</RelativeLayout>